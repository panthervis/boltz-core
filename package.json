{
  "name": "boltz-core",
  "version": "0.0.8",
  "description": "Core library of Boltz",
  "main": "dist/Boltz.js",
  "scripts": {
    "compile": "tsc",
    "lint": "tslint --project tsconfig.json && tslint --config tslint-alt.json 'test/**/*.ts'",
    "pretest": "docker run -v `pwd`/docker:/config -d --name boltz-bitcoin -p 18443:18443 boltz/bitcoin-core --conf=/config/bitcoin.conf",
    "posttest": "docker kill boltz-bitcoin && docker rm boltz-bitcoin",
    "test": "npm run test:unit && npm run test:int",
    "test:unit": "jest test/unit/*.spec.ts test/unit/swap/*.spec.ts",
    "test:int": "jest test/integration/swap/*.spec.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "preversion": "npm run lint && npm run compile && npm run test",
    "version": "npm run changelog",
    "prepublishOnly": "npm run compile"
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoltzExchange/boltz-core.git"
  },
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@boltz/bitcoin-ops": "^2.0.0",
    "bip65": "^1.0.3",
    "bip66": "^1.1.5",
    "bitcoinjs-lib": "^5.1.2",
    "bn.js": "^5.0.0",
    "varuint-bitcoin": "^1.1.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/uuid": "^3.4.5",
    "@types/ws": "^6.0.1",
    "conventional-changelog-cli": "^2.0.23",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-no-circular-imports": "^0.7.0",
    "typescript": "^3.5.3",
    "uuid": "^3.3.2",
    "ws": "^7.1.1"
  }
}
